<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/holo_blue_light"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="hassan_mastinoz.loginformb.LoginActivity">

    <TextView
        android:id="@+id/welcomeView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/holo_blue_dark"
        android:padding="5px"
        android:text="@string/welcome_string"
        android:textColor="@android:color/primary_text_dark_nodisable"
        android:textSize="20sp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/welcomeView"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:weightSum="4">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:text="@string/signing_string"
            android:textColor="@android:color/primary_text_dark_nodisable"
            android:textSize="25sp"
            android:textStyle="bold" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:gravity="center"
        android:weightSum="4">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="4"
            android:orientation="vertical">

            <EditText
                android:id="@+id/usernameET"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:background="@drawable/ed_bg"
                android:drawableEnd="@drawable/user_ic"
                android:hint="@string/username_hint_string"
                android:inputType="textPersonName"
                android:textColor="@android:color/primary_text_dark_nodisable"
                android:padding="10dp"
                android:singleLine="false"
                android:drawablePadding="@dimen/activity_horizontal_margin"
                />

            <EditText
                android:id="@+id/passwordET"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/ed_bg"
                android:hint="@string/password_hint_string"
                android:inputType="textPassword"
                android:textColor="@android:color/primary_text_dark_nodisable"
                android:padding="10dp" />

            <Button
                android:id="@+id/signingBtn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:background="@drawable/btn_bg"
                android:text="@string/signing_btn_string"
                android:textColor="@android:color/primary_text_dark_nodisable"
                android:textSize="20dp"
                android:textStyle="bold" />

        </LinearLayout>

    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:background="@android:color/holo_blue_dark"
        android:padding="5px"
        android:text="@string/des_by_string"
        android:textColor="@android:color/primary_text_dark_nodisable"
        android:textSize="15sp"
        android:textStyle="bold" />

</RelativeLayout>
